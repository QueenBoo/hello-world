        minlength:[1, 'Minimum length for fridge name is 1 character.']
    },
    fridgeLocation: {
        type: String,
        required: [true, 'A location is required'],
        minlength: [1,'Minimum length for fridge location is 1 character.']
    },
    fridgeURL: {
        type: String,
        required: [true, 'A URL or link to Social Media is required'],
        minlength: [1, 'Minimum length for fridge URL is 1 character.']
    },
    fridgeFoodStatus: {
        type: boolian,
        required: [true, 'A location is required'],
        minlength: [1, 'Minimum length for fridge location is 1 character.']
